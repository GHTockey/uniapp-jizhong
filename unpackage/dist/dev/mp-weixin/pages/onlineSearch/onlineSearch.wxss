  color: #3e3e3e;
}
.online-search-container .online-search-hot .online-search-hot-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 27.78rpx;
}
.online-search-container .online-search-hot .online-search-hot-list .online-search-hot-item {
  background: #f0f0f0;
