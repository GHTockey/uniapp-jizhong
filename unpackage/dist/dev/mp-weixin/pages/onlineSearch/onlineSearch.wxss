.online-search-container {
  padding: 0 29.17rpx;
  box-sizing: border-box;
  height: calc(100vh - 100rpx);
  padding-top: 27.78rpx;
}
.online-search-container .online-search-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 60rpx;
  box-sizing: border-box;
}
.online-search-container .online-search-bar .online-search-bar-input {
  flex-grow: 1;
  background-color: #f5f5f5;
  border-radius: 13.89rpx;
  padding: 18rpx 29rpx;
  display: flex;
  align-items: center;
}
.online-search-container .online-search-bar .online-search-bar-input .online-search-bar-input-icon {
  width: 23.61rpx;
  height: 23.61rpx;
  margin-right: 16.67rpx;
}
.online-search-container .online-search-bar .online-search-bar-input input {
  border: none;
  outline: none;
  background-color: transparent;
  flex-grow: 1;
  font-size: 25rpx;
}
.online-search-container .online-search-bar .online-search-bar-button {
  color: #333;
  font-size: 29.17rpx;
  margin-left: 29.17rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  color: #3e3e3e;
}
.online-search-container .online-search-history {
  margin-top: 55.56rpx;
}
.online-search-container .online-search-history .online-search-history-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.online-search-container .online-search-history .online-search-history-title .online-search-history-title-text {
  font-size: 29.17rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  color: #3e3e3e;
}
.online-search-container .online-search-history .online-search-history-title .online-search-history-clear {
  width: 27.78rpx;
  height: 27.78rpx;
}
.online-search-container .online-search-history .online-search-history-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 27.78rpx;
}
.online-search-container .online-search-history .online-search-history-list .online-search-history-item {
  background: #f0f0f0;
  border-radius: 29.86px;
