.list-box {
  border-radius: 14rpx;
  background-color: white;
  overflow: hidden;
}
.list-box .head {
  background-color: #e62624;
  padding: 27rpx 29rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list-box .head > view:nth-child(1) {
  font-size: 33.33rpx;
  color: #ffe7c8;
  text-shadow: 0px 0.33px 0.67px 0px #9c1e1c;
}
.list-box .head > view:nth-child(1) > image {
  width: 34.72rpx;
  height: 34.72rpx;
  display: inline-block;
  vertical-align: -6rpx;
  margin-right: 16rpx;
}
.list-box .head > view:nth-child(2) {
  font-size: 22.22rpx;
  color: #f9dbb4;
  margin-left: -30rpx;
}
.list-box .head > image:nth-child(3) {
  width: 66.67rpx;
  height: 34.72rpx;
}
.list-box .content-box {
  padding: 23.6rpx 29rpx;
  white-space: nowrap;
}
.list-box .content-box .content-item {
  display: inline-block;
  width: 194.44rpx;
  height: 194.44rpx;
  border-radius: 11.11rpx;
}
.list-box .content-box .content-item > view:nth-child(1) {
  width: 100%;
  height: 100%;
  background-color: #d8d8d8;
  border-radius: 11rpx;
}
.list-box .content-box .content-item > view:nth-child(2) > text:nth-child(1) {
  margin: 11rpx 0;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 25rpx;
  color: #323232;
}
.list-box .content-box .content-item > view:nth-child(2) > .tag {
  padding: 0 11rpx;
  text-align: center;
  color: white;
  font-size: 19.33rpx;
  display: inline-block;
  height: 30.56rpx;
  background: linear-gradient(90deg, #f91a13, #ff3700);
  border-radius: 6rpx;
}
.list-box .content-box .content-item > view:nth-child(2) > .price {
  color: #EB2C2A;
}
.list-box .content-box .content-item > view:nth-child(2) > .price .currency {
  font-size: 20rpx;
}
.list-box .content-box .content-item > view:nth-child(2) > .price .amount {
  font-size: 32rpx;
}
.list-box .content-box .content-item > view:nth-child(2) > .price .decimal {
  font-size: 22rpx;
}
.list-box .content-box .content-item > view:nth-child(2) > view:nth-child(4) {
  font-size: 20.83rpx;
  color: #b8b8b8;
}
