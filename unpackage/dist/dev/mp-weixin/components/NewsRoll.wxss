.news-box {
  margin-top: 20rpx;
  border-radius: 14rpx;
  padding: 20rpx 28rpx;
  background-color: white;
  display: flex;
  align-items: center;
}
.news-box > image {
  width: 74.31rpx;
  height: 71.53rpx;
}
.news-box .txt-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 18rpx;
  height: 80rpx;
}
.news-box .txt-box text {
  height: 39rpx !important;
  width: 100%;
  font-size: 27.78rpx;
  font-weight: 400;
  text-align: left;
  color: #1b1b1b;
}
.txt-box-animation {
  animation: slide 0.5s;
}
@keyframes slide {
0% {
    transform: translateY(0);
}
100% {
    transform: translateY(-72rpx);
}
}
